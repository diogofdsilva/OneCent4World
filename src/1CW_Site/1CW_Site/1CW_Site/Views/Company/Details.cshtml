@model _1CW_Site.Models.CompanyModel

@{
    ViewBag.Title = "My Profile Info";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link href="@Url.Content("~/Content/Options.css")" rel="stylesheet" type="text/css" />

<div class="box" id="box_profile_info">
    <div class="box_title">Profile Info</div>
    <div class="box_content">
        <table>
            <tr>
                <td>Name: </td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>Email: </td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>Address1: </td>
                <td>@Model.Address1</td>
            </tr>
            <tr>
                <td>Address2: </td>
                <td>@Model.Address2</td>
            </tr>
            <tr>
                <td>City: </td>
                <td>@Model.City</td>
            </tr>
            <tr>
                <td>Postal Code: </td>
                <td>@Model.PostalCode</td>
            </tr>
            <tr>
                <td>Country: </td>
                <td>@Model.Country</td>
            </tr>
            <tr>
                <td>Url: </td>
                <td>@Model.Url</td>
            </tr>
            <tr>
                <td>Image: </td>
                <td><img alt="Loaging Company Image" src="@Url.Action("ShowCompanyImage", "Company", new { id = Model.Id })" /></td>
            </tr>
            <tr>
                <td>Tags: </td>
                <td>
                    @foreach (var item in Model.Tags)
                    {
                        @item <br />
                    }
                </td>
            </tr>
        </table>
    </div>
    <div>
        <p>
            @Html.ActionLink("Edit", "Edit") |
            @Html.ActionLink("Change Password", "ChangePassword", "Account") |
            @Html.ActionLink("Back to Home", "MyAccount", "Home")
        </p>
    </div>
</div>



