@model _1CW_Site.Models.PersonModel

@{
    ViewBag.Title = "My Profile Info";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link href="@Url.Content("~/Content/Options.css")" rel="stylesheet" type="text/css" />

<div class="box" id="box_profile">
    <div class="box_title">Profile Info</div>
    <div class="box_content">
        <table>
            <tr>
                <td>First Name: </td>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <td>Last Name: </td>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <td>Email: </td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>Address1: </td>
                <td>@Model.Address1</td>
            </tr>
            <tr>
                <td>Address2: </td>
                <td>@Model.Address2</td>
            </tr>
            <tr>
                <td>City: </td>
                <td>@Model.City</td>
            </tr>
            <tr>
                <td>Postal Code: </td>
                <td>@Model.PostalCode</td>
            </tr>
            <tr>
                <td>Country: </td>
                <td>@Model.Country</td>
            </tr>
            <tr>
                <td>Birthdate: </td>
                <td>@Model.BirthDate</td>
            </tr>
        </table>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit") |
        @Html.ActionLink("Change Password", "ChangePassword", "Account") |
        @Html.ActionLink("Back to Home","MyAccount", "Home")
    </div>
</div>