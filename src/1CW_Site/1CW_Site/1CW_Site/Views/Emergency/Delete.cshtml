        <th>
            Weight
        </th>
        <th>
            EndDate
        </th>
        <th>
            Organization_id
        </th>
    </tr>
    @foreach (var item in ViewBag.Emergencies)
{
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
