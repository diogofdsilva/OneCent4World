            @item.Title
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @String.Format("{0:g}", item.StartDate)
        </td>
        <td>
            @String.Format("{0:F}", item.Weight)
        </td>
        <td>
            @String.Format("{0:g}", item.EndDate)
        </td>
        <td>
            @item.Organization_id
        </td>
    </tr>
}

</table>
