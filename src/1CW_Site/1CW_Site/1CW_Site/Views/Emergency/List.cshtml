@model IEnumerable<_1CW_Site.Models.EmergencyModel>

@{
    ViewBag.Title = "Emergencies";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link href="@Url.Content("~/Content/Emergency.css")" rel="stylesheet" type="text/css" />

<div class="box" id="box_emergency">
    <div>@Html.ActionLink("Create New", "Create")</div>
    <div class="box_title">Emergency</div>
    <div class="box_content">
        <table>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    StartDate
                </th>
                <th>
                    EndDate
                </th>
                <th>
                    Weight
                </th>
                <th>
                    Organization
                </th>
                <th></th>
            </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @String.Format("{0:g}", item.StartDate)
                </td>
                <td>
                    @String.Format("{0:g}", item.EndDate)
                </td>
                <td>
                    @String.Format("{0:F}", item.Weight)
                </td>
                <td>
                    @item.OrganizationName
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>
            </tr>
        }

        </table>
    </div>
    <div>@Html.ActionLink("Create New", "Create")</div>
</div>


    



