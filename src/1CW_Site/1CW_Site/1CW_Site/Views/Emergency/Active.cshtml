@model IEnumerable<_1CW_Site.Models.EmergencyModel>

@if (Model.Count() > 0)
{
    foreach (var emergency in Model)
    {
        <div class="box box_emergency">
            <div class="box_title"><img src="../../Content/Images/siren.gif" alt="Siren" />&nbsp;Emergency - @emergency.Title&nbsp;<img src="../../Content/Images/siren.gif" alt="Siren" /></div>
            <div class="box_content">
                @if (emergency.HasImage)
                {
                    <img src="@string.Format("/Emergency/ShowImage/{0}", emergency.Id)" alt="@emergency.Title" /><br />
                }
                <p>
                    @emergency.Description
                </p>
            </div>
        </div>
    }
}